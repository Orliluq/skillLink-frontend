{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
      "target": "esnext",       // Permite las características más recientes de JavaScript
      "module": "esnext",       // Permite módulos ES
      "strict": true,           // Habilita el modo estricto
      "esModuleInterop": true,  // Permite importar/exportar módulos
      "skipLibCheck": true,     // Desactiva la comprobación de bibliotecas
      "forceConsistentCasingInFileNames": true
    }
}
